# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./relationship_therapist.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vector Database Configuration
VECTOR_DB_TYPE=none
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
PINCONE_API_KEY=
PINCONE_ENVIRONMENT=

# Application Settings
APP_NAME=MirrorCore Relationship Therapist
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security
SECRET_KEY=your_super_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIRECTORY=./data/uploads
ALLOWED_FILE_TYPES=["text/plain","application/pdf","image/jpeg","image/png","audio/mpeg","audio/wav","application/zip"]

# Knowledge Base Settings
KNOWLEDGE_BASE_DIRECTORY=./knowledge_base/documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Real-time Settings
WEBSOCKET_TIMEOUT=300
RECOMMENDATION_CACHE_TTL=3600

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2